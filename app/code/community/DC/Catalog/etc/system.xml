<config>
    <sections>
        <dc_catalog translate="label" module="cms">
            <class>separator-top</class>
            <label>Attribute Info Pages</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>41</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <attributes translate="label">
                    <label>Attribute Selection</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <selectedattributes translate="label">
                            <label>Attribute Selection</label>
                            <source_model>dc_catalog/config_attributes</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_type>multiselect</frontend_type>
                            <comment>Select the attributes for which the Info Pages should be activated.</comment>
                        </selectedattributes>
                    </fields>
                </attributes>
            </groups>
        </dc_catalog>
    </sections>

</config>