<?php
	$_attr = $this->getAttributeInfo();

	$_externalUrlLabel=$_attr->getExternalUrlLabel();
?>
<div class="category-title category-head attribute-title">
	<h2><?php echo $this->htmlEscape($_attr->getName()) ?></h2>
</div>

<?php if (1 == $this->getCurrentPage()): ?>

	<?php
		echo $this->getChildHtml('attributeinfo.logo');
	?>

	<?php if($_description=$this->getDescription()): ?>
		<p class="attribute-description"><?php echo $_description; ?></p>
