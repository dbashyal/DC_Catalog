	<?php if(($_externalUrl=$_attr->getExternalUrl()) > ''): ?>
		<p class="attribute-external-url"><a href="<?php echo $_externalUrl; ?>" target="_blank" title="<?php echo $_externalUrlLabel?>">
			<?php echo ($_externalUrlLabel > '') ? $_externalUrlLabel : $_externalUrl ?>
		</a></p>
